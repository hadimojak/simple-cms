<%- include('../includes/head&side.ejs') %>


    <section class="vh-100  gradient-custom  ">
        <div class="  col text-center p-5">

            <table class="editorTable table mt-5 ">
                <thead>
                    <tr>
                        <th scope="col ">#</th>
                        <th scope="col ">نام و نام خاوادگی</th>
                        <th scope="col  ">شماره همراه</th>
                        <th scope="col ">ایمیل</th>
                        <th scope="col ">وضعیت</th>
                        <th scope="col ">انتخاب</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i < editorArray.length; i++) { %>
                        <tr>
                            <th scope="row">
                                <%= i+1 %>
                            </th>
                            <td>
                                <%= editorArray[i].firstName +' '+ editorArray[i].lastName %>
                            </td>
                            <td>
                                <%= editorArray[i].phoneNumber %>
                            </td>
                            <td>
                                <%= editorArray[i].email %>
                            </td>
                            <td>
                                    <% if (editorArray[i].state === true) {%>
                                        <p class='m-0 p-1 text-success font-weight-bold border rounded  border-success d-inline-flex bg-white'>فعال
                                    </p>
                                    <% }else { %>
                                        <p class='m-0 p-1 text-danger font-weight-bold rounded border border-danger d-inline-flex bg-white'>غیر فعال
                                        </p>
                                        <% } %>
                            </td>
                            <td>
                                <a class="m-0 p-1 text-success font-weight-bold rounded border border-success d-inline-flex bg-white"
                                    href="/admin/editors/<%= editorArray[i].phoneNumber %>">انتخاب</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <a class="m-0 p-1 text-success font-weight-bold rounded border border-success d-inline-flex bg-white " href="/admin/addUser">ایجاد کاربر جدید</a>

        </div>
    </section>

    </body>

    </html>
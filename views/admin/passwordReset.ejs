<%- include('../includes/head&side.ejs') %>


    <section class="vh-100 gradient-custom">
        <div class="container  h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class=" card-body   ">

                            <h3 class="   pb-2  d-flex justify-content-center ">
                                تغییر پسورد
                            </h3>
                            <% if (errorMessage) { %>
                                <h6 class=" alert alert-danger d-flex justify-content-center  " role="alert">
                                    <%= errorMessage %>
                                </h6>
                                <% } %>


                                    <form action="/admin/resetPassword" method="post" novalidate>
                                        <div class="row d-flex justify-content-around">
                                            <div class="col-md-6 mb-4 pb-2">
                                                <div class="form-outline">
                                                    <input type="password" id="password" name="password"
                                                        value="<%= oldInput.password %>"
                                                        class="form-control form-control-lg <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" />
                                                    <label class="form-label d-flex flex-row-reverse"
                                                        for="password">کلمه عبور جدید</label>
                                                </div>
                                                <div class="form-outline">
                                                    <input type="password" id="passwordConfirmed"
                                                        value="<%= oldInput.passwordConfirmed %>"
                                                        name="passwordConfirmed"
                                                        class="form-control form-control-lg <%= validationErrors.find(e => e.param === 'passwordConfirmed') ? 'invalid' : '' %>" />
                                                    <label class="form-label d-flex flex-row-reverse"
                                                        for="passwordConfirmed"> تکرار کلمه عبور
                                                    </label>
                                                </div>

                                            </div>



                                        </div>
                                        <div class="d-flex justify-content-around">
                                            <div class="mt-4 pt-2 d-flex justify-content-center">
                                                <input class="btn btn-primary btn-lg " type="submit"
                                                    
                                                    value='تایید پسورد' />
                                            </div>
                                        </div>
                                    </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../includes/footer.ejs') %>
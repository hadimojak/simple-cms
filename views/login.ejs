<%- include('./includes/head&side.ejs') %>


    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 d-flex justify-content-center">ورود</h3>
                            <form novalidate>

                                <div class="row d-flex flex-row-reverse ">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="tel" id="phoneNumber" class="form-control form-control-lg <%= validationErrors.find(e => e.param === 'phoneNumber') ? 'invalid' : '' %>"
                                                name="phoneNumber" value="<%= oldInput.phoneNumber %>" />
                                            <label class="form-label d-flex flex-row-reverse " for="phoneNumber">شماره
                                                موبایل</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="password" id="password" value="<%= oldInput.password %>" class="form-control form-control-lg <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                                name="password" />
                                            <label class="form-label d-flex flex-row-reverse"
                                                for="password">password-پسورد</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row d-flex flex-row-reverse justify-content-center">
                                    <div class=" mr-4  ">
                                        <input class="btn btn-primary btn-lg " formaction="/login" formmethod="post"
                                            type="submit" value="ورود" />
                                    </div>

                                    <div class=" mr-4  ">
                                        <input class="btn btn-primary btn-lg " formaction="/forgetPassword"
                                            formmethod="post" type="submit" value="فراموشی رمز عبور" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </body>

    </html>